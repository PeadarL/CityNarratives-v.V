<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.peter.citynarrativesvv.HomeActivity"
    android:weightSum="1">

    <!--Define Floating Action Button-->
    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="208dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/visitedText"
        android:text="Visited"
        android:visibility="invisible"
        android:background="@color/gold"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_below="@+id/ImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/narrativeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/narrativeQuestion"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/narrativeTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Next"
        android:layout_above="@+id/MapsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </LinearLayout>

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance and Time: "
        android:layout_above="@+id/MapsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/webLinkOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wikipedia"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_alignBaseline="@+id/skipButton"
        android:layout_alignBottom="@+id/skipButton"
        android:layout_toRightOf="@+id/narrativeTitle"
        android:layout_toEndOf="@+id/narrativeTitle" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/webLinkOne"
        android:layout_alignBottom="@+id/webLinkOne"
        android:layout_toRightOf="@+id/webLinkOne"
        android:layout_toEndOf="@+id/webLinkOne" />
    <Button
        android:id="@+id/MapsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

</RelativeLayout>