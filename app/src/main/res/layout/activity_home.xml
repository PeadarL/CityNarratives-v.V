        android:layout_alignParentStart="true" />-->

    <Button
        android:id="@+id/selectNarrativeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Tours"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/seeVisitedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Visited"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/yourLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching for device location...Ensure GPS is turned on."
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_above="@+id/selectNarrativeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/welcomImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/yourLocation" />


</RelativeLayout>